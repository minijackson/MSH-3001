<<means global, echo=FALSE>>=
smartWordcloud <- function(texte, lang) {
  corpus <- VCorpus(VectorSource(texte))
  # Replace "'", ";" and "/" by spaces to separate words.
  corpus <- tm_map(corpus, content_transformer(function(x) {
                                                 gsub("'", " ", gsub(";", " ", gsub("/", " ", x)))
                                              })
                  )
  corpus <- tm_map(corpus, removePunctuation)
  corpus <- tm_map(corpus, removeWords, stopwords(lang))

  tdm <- TermDocumentMatrix(corpus)
  m <- as.matrix(tdm)
  v <- sort(rowSums(m), decreasing=TRUE)
  d <- data.frame(word=names(v), freq=v)

  wordcloud(d$word, d$freq, colors=brewer.pal(9, "PuBu")[4:9])
}
@

