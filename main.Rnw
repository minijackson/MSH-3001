<<qualities global, echo=FALSE>>=
coloredBarplot <- function(x) {
  x <- as.vector(do.call(c, strsplit(levels(x), ";")))
  x.table <- table(factor(x))
  x.table.mapped <- as.vector(round((x.table - min(x.table))*8/max(x.table))) + 1
  x.table.colors <- do.call(c, as.list(brewer.pal(9, "YlOrRd"))[x.table.mapped])

  x <- barplot(x.table, xaxt='n', col=x.table.colors)
  par(cex=.6)
  labs <- names(x.table)
  text(cex=1, x=x+.5, y=-1.25, labs, xpd=TRUE, srt=20, pos=2)
}
@

<<qualities fr, echo=FALSE, fig.cap="Qualités de la C4 Cactus selon les personnes ayant répondu au sondage français", fig.pos="H", fig.height=5>>=
coloredBarplot(sondage.fr$Quelles.sont.selon.vous.les.qualités.de.la.Cactus..)
@

<<qualities en, echo=FALSE, fig.cap="Qualités de la C4 Cactus selon les personnes ayant répondu au sondage anglais", fig.pos="H", fig.height=5>>=
